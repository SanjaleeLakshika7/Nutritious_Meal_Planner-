@model IEnumerable<User>

@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-centered table-nowrap table-striped">
        <thead>
            <tr>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().UserID)</th>
                <th>@Html.DisplayNameFor(model => model.First().Username)</th>
                <th>@Html.DisplayNameFor(model => model.First().DisplayName)</th>
                <th>@Html.DisplayNameFor(model => model.First().EmailAddress)</th>
                <th>@Html.DisplayNameFor(model => model.First().ActiveStatusText)</th>
                <th style="width:70px;">Action</th>
            </tr>
        </thead>
        <tbody id="tblBody">
            @foreach (var item in Model)
            {
            <tr id="row_@item.UserID">
                <td class="d-none">@Html.DisplayFor(modelItem => item.UserID)</td>
                <td>@Html.DisplayFor(modelItem => item.Username)</td>
                <td>@Html.DisplayFor(modelItem => item.DisplayName)</td>
                <td>@Html.DisplayFor(modelItem => item.EmailAddress)</td>
                <td><span class="badge badge-@item.ActiveStatusClass">@item.ActiveStatusText</span></td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.UserID })" class="table-icon text-primary"><i class="mdi mdi-square-edit-outline"></i></a>
                    <a href="javascript:void(0);" onclick="ConfirmDelete('@item.UserID','@Url.Action("Delete")')" class="table-icon text-danger"> <i class="mdi mdi-delete"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>




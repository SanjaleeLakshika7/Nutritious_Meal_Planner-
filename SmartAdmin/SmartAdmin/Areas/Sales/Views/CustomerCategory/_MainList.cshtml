@model IEnumerable<CustomerCategory>

@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-centered table-nowrap table-striped">
        <thead>
            <tr>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().CustomerCategoryID)</th>
                <th>@Html.DisplayNameFor(model => model.First().CustomerCategoryName)</th>
                <th></th>
                <th style="width:70px;">Action</th>
            </tr>
        </thead>
        <tbody id="tblBody">
            @foreach (var item in Model)
            {
            <tr id="row_@item.CustomerCategoryID">
                <td class="d-none">@Html.DisplayFor(modelItem => item.CustomerCategoryID)</td>
                <td>@Html.DisplayFor(modelItem => item.CustomerCategoryName)</td>
                <td></td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.CustomerCategoryID })" class="table-icon text-primary"><i class="mdi mdi-square-edit-outline"></i></a>
                    <a href="javascript:void(0);" onclick="ConfirmDelete('@item.CustomerCategoryID','@Url.Action("Delete")')" class="table-icon text-danger"> <i class="mdi mdi-delete"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>




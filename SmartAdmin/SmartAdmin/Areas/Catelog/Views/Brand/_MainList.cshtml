@model IEnumerable<Brand>

@{
    Layout = null;
}

<div class="table-responsive">
    <table class="table table-centered table-nowrap table-striped">
        <thead>
            <tr>
                <th class="d-none">@Html.DisplayNameFor(model => model.First().BrandID)</th>
                <th>@Html.DisplayNameFor(model => model.First().BrandName)</th>
                <th></th>
                <th style="width:70px;">Action</th>
            </tr>
        </thead>
        <tbody id="tblBody">
            @foreach (var item in Model)
            {
            <tr id="row_@item.BrandID">
                <td class="d-none">@Html.DisplayFor(modelItem => item.BrandID)</td>
                <td>@Html.DisplayFor(modelItem => item.BrandName)</td>
                <td></td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.BrandID })" class="table-icon text-primary"><i class="mdi mdi-square-edit-outline"></i></a>
                    <a href="javascript:void(0);" onclick="ConfirmDelete('@item.BrandID','@Url.Action("Delete")')" class="table-icon text-danger"> <i class="mdi mdi-delete"></i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>



